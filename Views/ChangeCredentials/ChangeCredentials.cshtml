


@{
    ViewBag.Title = "Thay đổi thông tin đăng nhập";
}
<link rel="stylesheet" href="~/Content/ChangeCredentials.css">

<h1>Thay đổi thông tin đăng nhập</h1>

<div class="login-container">
    @using (Html.BeginForm("ChangeCredentials", "ChangeCredentials", FormMethod.Post))
    {
        <div class="form-group">
            <label for="newUsername">Tên đăng nhập mới:</label>
            <input type="text" name="newUsername" id="newUsername" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="newPassword">Mật khẩu mới:</label>
            <input type="password" name="newPassword" id="newPassword" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="confirmPassword">Xác nhận mật khẩu:</label>
            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" required />
        </div>

        <button type="submit" class="btn-submit">Lưu thay đổi</button>
    }
    @{
        var errorMessage = TempData["ErrorMessage"] as string;
    }
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="error-message">
            @errorMessage
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success-message">
            @TempData["SuccessMessage"]
        </div>
    }
</div>

<script>
    // Nếu có thông báo thành công, tự động chuyển hướng
    if (document.querySelector('.success-message')) {
        setTimeout(() => {
            window.location.href = '/Login/Login';
        }, 3000); // Chuyển hướng sau 3 giây
    }
</script>

