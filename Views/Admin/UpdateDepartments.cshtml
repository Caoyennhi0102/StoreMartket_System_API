<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        // Xử lý tìm kiếm
        $('#search-department-form').submit(function (e) {
            e.preventDefault();
            $('#search-result-body').empty();
            $('#search-result-container').hide();
            $('#update-form-container').hide();

            const maBoPhan = $('#maBoPhan').val();
            $.ajax({
                url: '@Url.Action("SearchDepartmentsByID", "Admin")',
                type: 'POST',
                data: { MaBP: maBoPhan },
                success: function (response) {
                    if (response.success) {
                        const data = response.data;
                        $('#search-result-container').show();
                        $('#update-form-container').show();

                        // Hiển thị dữ liệu trong bảng
                        $('#search-result-body').append(`
                            <tr>
                                <td>${data.MaBoPhan}</td>
                                <td>${data.TenBoPhan}</td>
                                <td>${data.MaCuaHang}</td>
                            </tr>
                        `);

                        // Điền dữ liệu vào form
                        $('#tenBoPhan').val(data.TenBoPhan);
                        $('#maCuaHang').val(data.MaCuaHang);
                    } else {
                        alert(response.message);
                    }
                }
            });
        });

        // Xử lý cập nhật
        $('#update-department-form').submit(function (e) {
            e.preventDefault();

            const maBoPhan = $('#maBoPhan').val();
            const tenBoPhan = $('#tenBoPhan').val();
            const maCuaHang = $('#maCuaHang').val();

            $.ajax({
                url: '@Url.Action("UpdateDepartments", "Admin")',
                type: 'POST',
                data: { maBoPhan: maBoPhan, tenBoPhan: tenBoPhan, maCuaHang: maCuaHang },
                success: function (response) {
                    if (response.success) {
                        alert('Cập nhật thành công!');

                        // Cập nhật lại dữ liệu trong bảng
                        $('#search-result-body').empty();
                        $('#search-result-body').append(`
                            <tr>
                                <td>${maBoPhan}</td>
                                <td>${tenBoPhan}</td>
                                <td>${maCuaHang}</td>
                            </tr>
                        `);
                    } else {
                        alert(response.message);
                    }
                }
            });
        });
    });
</script>
