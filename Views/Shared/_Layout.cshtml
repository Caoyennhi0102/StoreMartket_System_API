<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Page.Title - Hệ THỐNG QUẢN LÝ CỬA HÀNG TIỆN LỢi</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Sidebar.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


    @RenderSection("head", required: false)




</head>
<body>

    <!-- Container for the layout -->
    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <div class="col-md-3 sidebar d-flex flex-column">

                <div class="user-name mt-2">
                    <h4 class="text-white">@Session["HoTen"]</h4>
                </div>
                <style>
                    .sidebar {
                        height: 100vh;
                        overflow-y: auto;
                        overflow-x: hidden;
                        background-color: #0094ff;
                        color: white;
                        padding: 10px;
                    }
                </style>


                <div class="list-group">

                    @*  @if (Session["UserName"] != null)
                        {
                    *@
                    <!-- Menu Quản lý cửa hàng   -->
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#employeeFunctions" aria-expanded="false" aria-controls="employeeFunctions">
                        <i class="bi bi-shop-window"></i> QUẢN LÝ CỬA HÀNG
                    </a>
                    <div class="collapse" id="employeeFunctions">
                        <a href="/Admin/AddStore" class="list-group-item list-group-item-action">
                            <i class="bi bi-plus-circle"></i> Thêm Cửa Hàng
                        </a>
                        <a href="/Admin/UpdateStore" class="list-group-item list-group-item-action">
                            <i class="bi bi-pencil-square"></i> Cập Nhật Thông Tin Cửa Hàng
                        </a>
                        <a href="/Admin/DeleteStore" class="list-group-item list-group-item-action">
                            <i class="bi bi-trash"></i> Xóa Cửa Hàng
                        </a>
                    </div>
                    <!-- Menu Quản lý bộ phận -->
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#departmentFunctions" aria-expanded="false" aria-controls="departmentFunctions">
                        <i class="bi bi-house-door-fill"></i> QUẢN LÝ BỘ PHẬN
                    </a>
                    <div class="collapse" id="departmentFunctions">
                        <a href="/Admin/CreateDepartments" class="list-group-item list-group-item-action">
                            <i class="bi bi-plus-square"></i>Thêm bộ phận
                        </a>
                        <a href="/Admin/UpdateDepartments" class="list-group-item list-group-item-action">
                            <i class="bi bi-pencil-square"></i>Cập nhật thông tin bộ phận
                        </a>
                        <a href="/Admin/DeleteDepartments" class="list-group-item list-group-item-action">
                            <i class="bi bi-x-circle"></i>Xóa bộ phận
                        </a>
                    </div>
                    <!-- Menu Quản lý chức vụ -->
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#positionFunctions" aria-expanded="false" aria-controls="positionFunctions">
                        <i class="bi bi-person-lines-fill"></i> QUẢN LÝ CHỨC VỤ
                    </a>
                    <div class="collapse" id="positionFunctions">
                        <a href="/Admin/AddPosition" class="list-group-item list-group-item-action">
                            <i class="bi bi-plus-circle"></i> Thêm chức vụ
                        </a>
                        <a href="/Admin/UpdatePosition" class="list-group-item list-group-item-action">
                            <i class="bi bi-pencil-square"></i> Cập nhật chức vụ
                        </a>
                        <a href="/Admin/DeletePosition" class="list-group-item list-group-item-action">
                            <i class="bi bi-trash-fill"></i> Xóa chức vụ
                        </a>
                    </div>
                    <!-- Menu Quản lý User -->
                    <a href="#" class="list-group-item list-group-item-action" data-bs-toggle="collapse" data-bs-target="#userFunctions" aria-expanded="false" aria-controls="userFunctions">
                        <i class="bi bi-people-fill"></i> QUẢN LÝ USER
                    </a>
                    <div class="collapse" id="userFunctions">
                        <a href="/Admin/AddUser" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-plus-fill"></i> Thêm User
                        </a>
                        <a href="/Admin/UpdateUser" class="list-group-item list-group-item-action">
                            <i class="bi bi-pencil-fill"></i> Cập nhật User
                        </a>
                        <a href="/Admin/DeleteUser" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-x-fill"></i> Xóa User
                        </a>
                        <a href="/Admin/LockUser" class="list-group-item list-group-item-action">
                            <i class="bi bi-lock-fill"></i> Khóa User
                        </a>
                        <a href="/Admin/UnlockUser" class="list-group-item list-group-item-action">
                            <i class="bi bi-unlock-fill"></i> Mở khóa User
                        </a>

                        <a href="/Admin/CreatePermissions" class="list-group-item list-group-item-action">
                            <i class="bi bi-person-plus-fill"></i> Tạo Quyền User
                        </a>
                        <a href="/Admin/UpdatePermissions" class="list-group-item list-group-item-action">
                            <i class="bi bi-gear-wide-connected"></i> Cập nhật quyền
                        </a>
                        <a href="/Admin/DeletePermissions" class="list-group-item list-group-item-action">
                            <i class="bi bi-trash"></i> Xóa quyền
                        </a>
                        <a href="/Admin/GrantUserRole" class="list-group-item list-group-item-action">
                            <i class="bi bi-key-fill"></i> Cấp quyền User
                        </a>
                        <a href="/Admin/RevokeUserRole" class="list-group-item list-group-item-action">
                            <i class="bi bi-key"></i> Thu quyền User
                        </a>
                    </div>





                    <!-- Nút Logout -->
                    <a href="@Url.Action("Logout", "Admin")" class="list-group-item list-group-item-action text-danger">
                        <i class="bi bi-box-arrow-right"></i> Đăng xuất
                    </a>
                    @*
                        }
                        else
                        {
                             <!-- Nút Login -->
                    *@
                    <!-- Hiển thị đăng nhập nếu người dùng chưa đăng nhập -->
                    <a href="@Url.Action("Login", "Admin")" class="list-group-item list-group-item-action">
                        <i class="fa fa-key" style="color:gold;"></i> Đăng nhập
                    </a>
                    @*}*@
                </div>
            </div>
            <!-- Main Content Area -->
            <div class="col-md-9">
                @RenderBody()


            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 